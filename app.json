{
  "expo": {
    "name": "english-lesson",
    "slug": "english-lesson",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "englishlesson",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.naoyasasaki.englishlesson",
      "buildNumber": "1",
      "associatedDomains": [
        "applinks:englishlesson.naoyasasaki.com",
        "applinks:englishlesson.naoyasasaki.com"
      ],
      "infoPlist": {
        "NSMicrophoneUsageDescription": "This app uses the microphone for speech recognition and pronunciation practice to help you learn English more effectively.",
        "NSSpeechRecognitionUsageDescription": "This app uses speech recognition to help you practice pronunciation and improve your English speaking skills.",
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "99a2be32-b30a-4dfd-8d70-9a80585f5f16"
      }
    },
    "owner": "naoyasasakiweb3"
  }
}
